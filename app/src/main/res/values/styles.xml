<resources>


    <style name="Widget" />

    <style name="Widget.Weather" />

    <style name="Widget.Weather.City" />


    <style name="Widget.Weather.City.Text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/city_margin_top</item>
        <item name="android:background">@null</item>
        <item name="android:enabled">false</item>
        <item name="android:textAppearance">?textAppearanceHeadline5</item>
        <item name="fontFamily">@font/montserrat_semi_bold</item>
    </style>


    <style name="Widget.Weather.City.Icon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">?selectableItemBackgroundBorderless</item>
        <item name="android:padding">@dimen/city_icon_padding</item>
        <item name="android:visibility">gone</item>
    </style>


</resources>
